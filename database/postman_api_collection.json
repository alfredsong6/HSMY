        {
          "name": "获取日榜",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Api-Version",
                "value": "v1.0",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rankings/daily?limit=100",
              "host": ["{{baseUrl}}"],
              "path": ["rankings", "daily"],
              "query": [
                {
                  "key": "limit",
                  "value": "100",
