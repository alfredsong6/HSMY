<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsmy.mapper.VipPurchaseMapper">

    <resultMap id="BaseResultMap" type="com.hsmy.entity.VipPurchase">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="package_id" property="packageId"/>
        <result column="order_no" property="orderNo"/>
        <result column="price" property="price"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="payment_method" property="paymentMethod"/>
        <result column="payment_status" property="paymentStatus"/>
        <result column="payment_time" property="paymentTime"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, package_id, order_no, price, start_time, end_time,
        payment_method, payment_status, payment_time,
        create_by, create_time, update_by, update_time, is_deleted
    </sql>

    <select id="countSuccessByUserAndPackage" resultType="int">
        SELECT COUNT(1)
        FROM t_vip_purchase
        WHERE user_id = #{userId}
        AND package_id = #{packageId}
        AND payment_status = 1
        AND is_deleted = 0
    </select>

    <select id="selectSuccessCountGroupByPackage" resultType="java.util.Map">
        SELECT package_id AS packageId, COUNT(1) AS purchaseCount
        FROM t_vip_purchase
        WHERE user_id = #{userId}
        AND payment_status = 1
        AND is_deleted = 0
        GROUP BY package_id
    </select>

    <select id="selectLatestSuccessByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_vip_purchase
        WHERE user_id = #{userId}
        AND payment_status = 1
        AND is_deleted = 0
        ORDER BY payment_time DESC, create_time DESC
        LIMIT 1
    </select>

</mapper>
