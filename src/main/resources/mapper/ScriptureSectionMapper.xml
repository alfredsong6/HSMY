<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsmy.mapper.ScriptureSectionMapper">

    <resultMap id="BaseResultMap" type="com.hsmy.entity.ScriptureSection">
        <id column="id" property="id"/>
        <result column="scripture_id" property="scriptureId"/>
        <result column="section_no" property="sectionNo"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="audio_url" property="audioUrl"/>
        <result column="word_count" property="wordCount"/>
        <result column="duration_seconds" property="durationSeconds"/>
        <result column="is_free" property="isFree"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, scripture_id, section_no, title, content, audio_url,
        word_count, duration_seconds, is_free, sort_order,
        create_by, create_time, update_by, update_time, is_deleted
    </sql>

    <select id="selectByScriptureId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_scripture_section
        WHERE scripture_id = #{scriptureId} AND is_deleted = 0
        ORDER BY sort_order ASC, section_no ASC
    </select>

    <select id="selectFirstSection" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_scripture_section
        WHERE scripture_id = #{scriptureId} AND is_deleted = 0
        ORDER BY sort_order ASC, section_no ASC
        LIMIT 1
    </select>

    <select id="selectByScriptureAndNo" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_scripture_section
        WHERE scripture_id = #{scriptureId}
          AND section_no = #{sectionNo}
          AND is_deleted = 0
        LIMIT 1
    </select>

</mapper>
