<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsmy.mapper.UserMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.hsmy.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="register_time" property="registerTime"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="status" property="status"/>
        <result column="vip_level" property="vipLevel"/>
        <result column="vip_expire_time" property="vipExpireTime"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, username, password, nickname, avatar_url, email, phone, gender,
        birthday, register_time, last_login_time, status, vip_level, vip_expire_time,
        create_by, create_time, update_by, update_time, is_deleted
    </sql>
    
    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user
        WHERE username = #{username}
        AND is_deleted = 0
        LIMIT 1
    </select>
    
    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user
        WHERE phone = #{phone}
        AND is_deleted = 0
        LIMIT 1
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user
        WHERE email = #{email}
        AND is_deleted = 0
        LIMIT 1
    </select>
    
    <!-- 批量查询用户信息 -->
    <select id="selectBatchByIds" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user
        WHERE id IN
        <foreach collection="userIds" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
        AND is_deleted = 0
    </select>
    
    <!-- 更新用户最后登录时间 -->
    <update id="updateLastLoginTime">
        UPDATE t_user
        SET last_login_time = NOW(),
            update_time = NOW()
        WHERE id = #{userId}
        AND is_deleted = 0
    </update>
    
    <!-- 统计用户总数 -->
    <select id="countTotal" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM t_user
        WHERE is_deleted = 0
    </select>
    
</mapper>