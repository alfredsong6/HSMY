    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "// 自动保存登录后的token",
          "if (pm.request.url.path.includes('/login') || pm.request.url.path.includes('/register-by-code')) {",
          "    var jsonData = pm.response.json();",
          "    if (jsonData.code === 200 && jsonData.data) {",
          "        // 保存token",
          "        if (jsonData.data.token) {",
          "            pm.collectionVariables.set('token', jsonData.data.token);",
          "            console.log('Token saved: ' + jsonData.data.token);",
          "        }",
          "        // 兼容旧版本的sessionId",
          "        else if (jsonData.data.sessionId) {",
          "            pm.collectionVariables.set('token', jsonData.data.sessionId);",
          "            console.log('Token saved from sessionId: ' + jsonData.data.sessionId);",
          "        }",
          "    }",
          "}"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// 请求前自动设置Authorization头",
          "// 集合级别的auth配置会自动处理Bearer token"
        ],
        "type": "text/javascript"
      }
    }
  ]
